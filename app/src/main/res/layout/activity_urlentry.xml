<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.m10ga.myrecipejournal.URLEntry">

    <EditText
        android:id="@+id/edt_recipe"
        android:layout_width="289dp"
        android:layout_height="0dp"
        android:layout_marginBottom="44dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Recipe Name"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UnknownId" />

    <EditText
        android:id="@+id/edt_url"
        android:layout_width="291dp"
        android:layout_height="44dp"
        android:layout_marginBottom="39dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter URL of the Recipe"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btn_url"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_recipe" />


    <Button
        android:id="@+id/btn_url"
        android:layout_width="78dp"
        android:layout_height="49dp"
        android:layout_marginBottom="296dp"
        android:layout_marginEnd="151dp"
        android:layout_marginStart="155dp"
        android:text="SUBMIT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>